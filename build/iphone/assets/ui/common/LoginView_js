function LoginView(){var e=Ti.UI.createScrollView({maxZoomScale:1.5,minZoomScale:1,showHorizontalScrollIndicator:!1,showVerticalScrollIndicator:!1,scrollingEnabled:!1,horizontalBounce:!1,verticalBounce:!1}),o=Ti.UI.createView({backgroundImage:"images/LoginPage/loginBG.png"});e.add(o);var n=Ti.UI.createTextField({top:pxToDP(536),width:pxToDP(405),height:pxToDP(53),hintText:" Username",clearButtonMode:Ti.UI.INPUT_BUTTONMODE_ONFOCUS,backgroundImage:"images/LoginPage/Log-in_04.png",keyboardType:Ti.UI.KEYBOARD_ASCII});n.addEventListener("focus",function(){1==e.getZoomScale()&&(e.scrollTo(0,40),e.setZoomScale(1.4,{animated:!0}))}),n.addEventListener("return",function(){e.setZoomScale(1,{animated:!0})});var t=Ti.UI.createTextField({top:pxToDP(609),width:pxToDP(405),height:pxToDP(53),hintText:" Password",passwordMask:!0,backgroundImage:"images/LoginPage/Log-in_04.png",borderStyle:Ti.UI.INPUT_BORDERSTYLE_NONE,clearButtonMode:Ti.UI.INPUT_BUTTONMODE_ONFOCUS});t.addEventListener("focus",function(){1==e.getZoomScale()&&(e.scrollTo(0,40),e.setZoomScale(1.4,{animated:!0}))}),t.addEventListener("return",function(){e.setZoomScale(1,{animated:!0})}),o.add(n),o.add(t);var i=Ti.UI.createButton({backgroundImage:"images/LoginPage/loginBtn.png",top:pxToDP(712),width:pxToDP(405),height:pxToDP(80)});i.addEventListener("click",function(){}),o.add(i);var a=Ti.UI.createLabel({text:"New Debater?",font:{fontSize:15},color:"#ADADAD",width:"auto",height:20,top:pxToDP(810)});a.addEventListener("touchstart",function(){a.setColor("#2828FF")}),o.add(a),a.addEventListener("touchend",function(){a.setColor("#ADADAD")}),a.addEventListener("click",function(){});var r=Ti.UI.createButton({backgroundImage:"images/LoginPage/floginBtn.png",top:pxToDP(943),width:pxToDP(405),height:pxToDP(79)}),d=require("facebook");return d.appid="563214183734201",d.permissions=["publish_stream","read_stream"],d.forceDialogAuth=!0,d.addEventListener("login",function(e){e.success?alert("Logged In"):e.error?alert(e.error):e.cancelled&&alert("Canceled")}),r.addEventListener("click",function(){d.logout(),d.authorize()}),o.add(r),e}Ti.include("../logic/HttpConnection.js"),Ti.include("../logic/GraphicFunctions.js"),module.exports=LoginView;